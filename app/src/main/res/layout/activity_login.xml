<?xml version="1.0" encoding="utf-8"?>

<!--
Root layout: ConstraintLayout lets you position views relative to each other
and to the parent (very flexible for responsive UIs).
-->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:padding="16dp">

    <!-- Top app bar (toolbar) fixed to the top; title is centered -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:title="NIT3213 Project by Abishek"
        app:titleTextColor="?attr/colorOnSurface"
        app:backgroundTint="?attr/colorSurface"
        app:titleCentered="true"/>

    <!--
    Campus selection:
    A MaterialCard groups a single-selection toggle group with 3 buttons.
    -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/campusCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/topAppBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="?attr/colorSurfaceVariant">

        <!-- Only one campus can be selected; selection is required -->
        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/groupCampus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            app:singleSelection="true"
            app:selectionRequired="true">

            <!-- Default selection: Footscray -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFootscray"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Footscray"
                android:checked="true"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSydney"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sydney"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBrisbane"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Brisbane"/>
        </com.google.android.material.button.MaterialButtonToggleGroup>
    </com.google.android.material.card.MaterialCardView>

    <!-- First name input: TextInputLayout provides floating label and Material styling -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilUser"
        style="@style/Widget.App.TextInputLayout.Filled"
        android:hint="First name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toBottomOf="@id/campusCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Actual text field bound in code as etUsername -->
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!--
    Student ID input:
    Uses numberPassword to hide digits; endIcon shows a visibility toggle.
    -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilPass"
        style="@style/Widget.App.TextInputLayout.Filled"
        android:hint="Student ID (no 's')"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:endIconMode="password_toggle"
        app:layout_constraintTop_toBottomOf="@id/tilUser"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Actual text field bound in code as etPassword -->
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Sign-in button styled as outlined to match the card color scheme -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLogin"
        android:text="Sign In"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tilPass"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/Widget.Material3.Button.OutlinedButton"
        app:backgroundTint="?attr/colorSurfaceVariant"
        app:strokeColor="?attr/colorOnSurface"
        app:strokeWidth="1dp"
        android:textColor="?attr/colorOnSurface"
        app:cornerRadius="16dp"/>

    <!-- Progress spinner: hidden by default; shown while logging in -->
    <ProgressBar
        android:id="@+id/progress"
        style="?android:attr/progressBarStyle"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Error text: hidden until a login failure occurs -->
    <TextView
        android:id="@+id/tvError"
        android:visibility="gone"
        android:textColor="@color/md_sys_color_error"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/progress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
